<?xml version='1.0' encoding='utf-8'?>
<widget id="com.firebaseapp.jackhammer" version="1.0.0"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android" android-versionCode="00001" ios-CFBundleVersion="1.0.0">
    <name>JackHammer</name>
    <description>Tiny fast flashcard app</description>
    <author email="jo.mataloni@gmail.com" href="https://wedial.it/JonathanMataloni">Jonathan Mataloni</author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <!-- <resource-file src="./platform_assets/google-services.json" target="app/google-services.json" /> -->
        <allow-intent href="market:*" />
        <icon src="./platform_assets/icon/android/mdpi.png" density="mdpi" />
        <icon src="./platform_assets/icon/android/hdpi.png" density="hdpi" />
        <icon src="./platform_assets/icon/android/xhdpi.png" density="xhdpi" />
        <icon src="./platform_assets/icon/android/xxhdpi.png" density="xxhdpi" />
        <icon src="./platform_assets/icon/android/xxxhdpi.png" density="xxxhdpi" />
        <splash src="./platform_assets/screen/android/splash-port-hdpi.png" density="port-hdpi" />
        <splash src="./platform_assets/screen/android/splash-port-ldpi.png" density="port-ldpi" />
        <splash src="./platform_assets/screen/android/splash-port-mdpi.png" density="port-mdpi" />
        <splash src="./platform_assets/screen/android/splash-port-xhdpi.png" density="port-xhdpi" />
        <splash src="./platform_assets/screen/android/splash-port-xxhdpi.png" density="port-xxhdpi" />
        <splash src="./platform_assets/screen/android/splash-port-xxxhdpi.png" density="port-xxxhdpi" />
    </platform>
    <platform name="ios">
        <!-- Info.plist config keys to merge -->
        <edit-config target="CFBundleDevelopmentRegion" file="*-Info.plist" mode="merge">
            <string>it_IT</string>
        </edit-config>
        <edit-config target="UILaunchStoryboardName" file="*-Info.plist" mode="merge">
            <string>CDVLaunchScreen</string>
        </edit-config>
        <edit-config target="UIMainStoryboardFile" file="*-Info.plist" mode="merge">
            <string>CDVLaunchScreen</string>
        </edit-config>
        <edit-config target="UIRequiresFullScreen" file="*-Info.plist" mode="merge">
            <true />
        </edit-config>
        <edit-config target="UIStatusBarStyle" file="*-Info.plist" mode="merge">
            <string>UIStatusBarStyleDarkContent</string>
        </edit-config>
        <edit-config target="UISupportedInterfaceOrientations" file="*-Info.plist" mode="merge">
            <array>
                <string>UIInterfaceOrientationPortrait</string>
            </array>
        </edit-config>
        <edit-config target="NSPhotoLibraryUsageDescription" file="*-Info.plist" mode="merge">
            <string>
				$(PRODUCT_NAME) requires access to your files to upload a valid words list
            </string>
        </edit-config>
        <edit-config target="NSPhotoLibraryAddUsageDescription" file="*-Info.plist" mode="merge">
            <string>
				$(PRODUCT_NAME) requires access to your files to upload a valid words list
            </string>
        </edit-config>


        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- App icons -->
        <icon src="./platform_assets/icon/ios/icon-1024.png" width="1024" height="1024" />
        <icon src="./platform_assets/icon/ios/icon-small.png" width="29" height="29" />
        <icon src="./platform_assets/icon/ios/icon-small@2x.png" width="58" height="58" />
        <icon src="./platform_assets/icon/ios/icon-small@3x.png" width="87" height="87" />
        <icon src="./platform_assets/icon/ios/icon-small-40.png" width="40" height="40" />
        <icon src="./platform_assets/icon/ios/icon-small-40@2x.png" width="80" height="80" />
        <icon src="./platform_assets/icon/ios/icon-small-40@3x.png" width="120" height="120" />
        <icon src="./platform_assets/icon/ios/icon-small-50.png" width="50" height="50" />
        <icon src="./platform_assets/icon/ios/icon-small-50@2x.png" width="100" height="100" />
        <icon src="./platform_assets/icon/ios/icon.png" width="57" height="57" />
        <icon src="./platform_assets/icon/ios/icon@2x.png" width="114" height="114" />
        <icon src="./platform_assets/icon/ios/icon-60.png" width="60" height="60" />
        <icon src="./platform_assets/icon/ios/icon-60@2x.png" width="120" height="120" />
        <icon src="./platform_assets/icon/ios/icon-60@3x.png" width="180" height="180" />
        <icon src="./platform_assets/icon/ios/icon-72.png" width="72" height="72" />
        <icon src="./platform_assets/icon/ios/icon-72@2x.png" width="144" height="144" />
        <icon src="./platform_assets/icon/ios/icon-76.png" width="76" height="76" />
        <icon src="./platform_assets/icon/ios/icon-76@2x.png" width="152" height="152" />
        <icon src="./platform_assets/icon/ios/icon-167.png" width="167" height="167" />
        <icon src="./platform_assets/icon/ios/icon-83.5@2x.png" width="167" height="167" />
        <!-- Storyboard portrait -->
        <splash src="./platform_assets/screen/ios/Default@2x~iphone~anyany.png" />
        <splash src="./platform_assets/screen/ios/Default@2x~iphone~comany.png" />
        <splash src="./platform_assets/screen/ios/Default@3x~iphone~anyany.png" />
        <splash src="./platform_assets/screen/ios/Default@3x~iphone~comany.png" />
        <splash src="./platform_assets/screen/ios/Default@2x~ipad~anyany.png" />
        <splash src="./platform_assets/screen/ios/Default@2x~ipad~comany.png" />
    </platform>
</widget>
